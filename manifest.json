{
  "name": "LaTeX and Macros",
  "version": "1.2.0",
  "description": "Write basic LaTeX and custom text replacement rules",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["onInstalled.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": [
        "presets.js",
        "macros.js"
      ]
    }
  ],
  "options_page": "options.html",
  "manifest_version": 2
}
