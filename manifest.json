{
  "manifest_version": 2,
  "name": "Text Macros & LaTeX",
  "version": "1.3.11",
  "description": "Text macros and a LaTeX preset",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "onInstalled.js",
      "iconController.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": [
        "macros.js",
        "presets.js",
        "runtime.js"
      ]
    }
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon-128x.png",
    "default_title": "Macros and LaTeX"
  },
  "icons": {
    "128": "icon-128x.png"
  }
}
